{
  "name": "basic-web-app",
  "version": "0.0.2",
  "description": "Basic web app code to start a project using React.js, Sass, Node.js, Express, TSLint and Webpack.",
  "main": "src/server/server.ts",
  "scripts": {
    "test": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "build": "concurrently \"tsc\" \"webpack --mode production\"",
    "start": "yarn build && node dist/server/server.js",
    "client": "webpack --mode development",
    "server": "tsc && node dist/server/server.js",
    "dev": "tslint -c tslint.json 'src/**/*.ts' && concurrently \"yarn server\" \"yarn client\""
  },
  "author": {
    "name": "Teddy Toussaint",
    "email": "teddy.toussaint@insalien.org"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ttous/basic-web-app.git"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "express": "^4.16.3",
    "moment": "^2.24.0",
    "pino": "^5.11.1",
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.6",
    "@types/pino": "^5.8.5",
    "@types/react": "^16.8.4",
    "@types/react-dom": "^16.8.2",
    "@types/react-test-renderer": "^16.8.1",
    "babel-jest": "^24.1.0",
    "babel-loader": "^8.0.0",
    "clean-webpack-plugin": "^1.0.0",
    "concurrently": "^4.0.0",
    "coveralls": "^3.0.3",
    "css-loader": "^2.0.0",
    "file-loader": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.1.0",
    "node-sass": "^4.11.0",
    "pino-pretty": "^2.5.0",
    "react-test-renderer": "^16.8.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "ts-loader": "^5.3.3",
    "tslint": "^5.13.0",
    "typescript": "^3.3.3333",
    "url-loader": "^1.0.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.3"
  }
}
