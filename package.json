{
  "name": "basic-web-app",
  "version": "0.0.1",
  "description": "Basic web app code to start a project using React.js, Sass, Node.js, Express, TSLint and Webpack.",
  "main": "src/server/server.ts",
  "scripts": {
    "build": "concurrently \"tsc\" \"webpack --mode production\"",
    "start": "npm run build && node src/server/server.ts",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot --display-error-details",
    "server": "tsc && nodemon dist/server/server.js",
    "dev": "tslint -c tslint.json 'src/**/*.ts' && concurrently \"npm run server\" \"npm run client\""
  },
  "author": "Teddy Toussaint",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "express": "^4.16.3",
    "moment": "^2.24.0",
    "pino": "^5.11.1",
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@types/express": "^4.16.1",
    "@types/pino": "^5.8.5",
    "@types/react": "^16.8.4",
    "@types/react-dom": "^16.8.2",
    "babel-loader": "^8.0.0",
    "clean-webpack-plugin": "^1.0.0",
    "concurrently": "^4.0.0",
    "css-loader": "^2.0.0",
    "file-loader": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.17.3",
    "pino-pretty": "^2.5.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "ts-loader": "^5.3.3",
    "tslint": "^5.13.0",
    "typescript": "^3.3.3333",
    "url-loader": "^1.0.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.3"
  }
}
